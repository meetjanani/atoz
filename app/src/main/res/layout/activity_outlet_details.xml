<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditOutletDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Outlet Details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNavigationOutlet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate"
        app:layout_constraintTop_toBottomOf="@id/btnEditOutletDetails"
        app:layout_constraintStart_toStartOf="@id/btnEditOutletDetails"/>
</androidx.constraintlayout.widget.ConstraintLayout>
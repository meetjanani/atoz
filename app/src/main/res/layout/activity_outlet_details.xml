<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/topArea"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_horizontal"
                android:background="@drawable/gradient"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/app_logo"
                    />


            </RelativeLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_gravity="center"
                android:layout_marginTop="-80dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewProductCatelog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="7dp"
                    app:cardCornerRadius="10dp"
                    >
                    <LinearLayout
                        android:id="@+id/main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="2dp"
                        android:padding="10dp"
                        >
                        <LinearLayout
                                android:id="@+id/bncard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="2dp"
                                android:padding="10dp"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bussiness Name :"
                                    android:textSize="15sp"
                                    android:paddingRight="10dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:id="@+id/textViewBusinessName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Prkash Pan Shop"
                                    android:textSize="15sp"
                                    android:layout_gravity="center_horizontal"
                                    />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Person Name :"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/textViewContactPersonName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prkash Bhai"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Person Number :"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/textViewContactPersonNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1234567899"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Outlet ID :"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/textViewOutletId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prkash Bhai"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GST Number :"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/textViewGSTNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1234567899"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="City :"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rajkot"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Area :"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gondal Road"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address :"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/textViewAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rajkot Soc."
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pin Code :"
                                android:textSize="15sp"
                                android:paddingRight="10dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/pincode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="360001"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            >

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnEditOutletDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit Outlet Details"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnNavigationOutlet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Navigate"
                                app:layout_constraintTop_toBottomOf="@id/btnEditOutletDetails"
                                app:layout_constraintStart_toStartOf="@id/btnEditOutletDetails"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/buttonPlaceOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Place Order"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>